{
    "comment_": [
        "The grammar uses list items instead of OR, and <> to refer to a token type.",
        "Brackets are ignored as they aren't part of the tree."
    ],
    "grammar": {
        "block": [
            "section block",
            "section"
        ],
        "section": [
            "statement <;>",
            "while",
            "if_else",
            "for"
        ],
        "for": [
            "<FOR> for_init <{> block <}>"
        ],
        "for_init": [
            "<(> statement <;> comparison <;> statement <)>"
        ],
        "if_else": [
            "if <ELSE> <{> block <}>",
            "if"
        ],
        "if": [
            "<IF> condition <{> block <}>"
        ],
        "while": [
            "<WHILE> condition <{> block <}>"
        ],
        "condition": [
            "<(> logical <)>"
        ],
        "statement": [
            "variable <ASSIGN> logical"
        ],
        "variable": [
            "<TYPE> <ID>",
            "<ID>"
        ],
        "logical": [
            "bitwise <LOGICAL> bitwise",
            "bitwise"
        ],
        "bitwise": [
            "comparison <BITWISE_OP> comparison",
            "comparison"
        ],
        "comparison": [
            "shift <COMPARISON> shift",
            "shift"
        ],
        "shift": [
            "negation <BITWISE_SHIFT> negation",
            "negation"
        ],
        "negation": [
            "<NOT> expression",
            "expression"
        ],
        "expression": [
            "term <PLUS_MINUS> term",
            "term"
        ],
        "term": [
            "exp_factor <MULT_DIVIDE> exp_factor",
            "exp_factor <MOD> exp_factor",
            "exp_factor"
        ],
        "exp_factor":[
            "factor <EXP> factor",
            "factor"
        ],
        "factor": [
            "terminal",
            "<(> logical <)>"
        ],
        "terminal": [
            "<ID>", 
            "<CHAR>", 
            "<BOOL>"
        ]
    },
    "operators": [
        "PLUS_MINUS", "MULT_DIVIDE", "MOD", "EXP", "COMPARISON", "LOGICAL", "NOT", "ASSIGN", "TYPE", "BITWISE_OP", "BITWISE_SHIFT",
        "WHILE", "IF", "ELSE", "FOR"
    ],
    "objects": ["ID", "CHAR", "BOOL"],
    "exclude_from_AST": ["(", ")", ";"]
}